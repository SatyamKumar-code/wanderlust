<% layout("/layouts/boilerplate")%>
    <div class="row">
        <div class="col-8 offset-2">

            <body>
                <br><br>
                <h3>Create a New Listing</h3>
                <form action="/listings" method="post" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" type="text" placeholder="enter title" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">description</label>
                        <textarea name="listing[description]" type="text" placeholder="enter description"
                            class="form-control" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input name="listing[image]" type="text" placeholder="enter image URL/Link"
                            class="form-control">
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" type="number" placeholder="enter price" class="form-control" required>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" type="text" placeholder="enter country" class="form-control" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" type="text" placeholder="enter location" class="form-control" required>
                    </div>

                    <button class="btn btn-dark add-btn">Add</button>
                    <br><br>
                </form>
            </body>
        </div>
    </div>